<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>
        <item name="android:fontFamily">@font/d_din_normal</item>

        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>

    </style>


    <style name="CartTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/spruce_valencia</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>
        <item name="android:fontFamily">@font/d_din_normal</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>


    </style>


    <!--    <style name="myRatingBar" parent="@android:style/Widget.RatingBar.Indicator" />-->


    <style name="text_normal">

        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/spruce_dark_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>

    </style>


    <style name="text_input_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/d_din_normal</item>
        <item name="font">@font/d_din_normal</item>
        <item name="android:textColor">@color/spruce_dark_gray</item>
        <item name="background">@null</item>

        <item name="boxStrokeColor">@null</item>
        <item name="hintEnabled">false</item>
        <item name="maxLines">1</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:layout_marginEnd">@dimen/text_input_margin_end</item>
        <item name="android:layout_marginStart">@dimen/text_input_margin_start</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>

    </style>


    <style name="button_style">
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>

        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>

    </style>

    <style name="button_style_text_button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>

        <item name="android:textColor">@color/spruce_dark_gray</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>

    </style>



    <style name="button_style_filled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="font">@font/d_din_normal</item>
        <item name="backgroundTint">@color/spruce_valencia</item>

        <item name="fontFamily">@font/d_din_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/input_padding</item>
        <item name="android:layout_marginEnd">@dimen/margin_end</item>
        <item name="android:layout_marginStart">@dimen/margin_start</item>

    </style>

    <style name="text_heading">

        <item name="android:textSize">@dimen/text_xlarge_heading</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>


    </style>

    <style name="text_small">

        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="font">@font/d_din_normal</item>
        <item name="fontFamily">@font/d_din_normal</item>



    </style>


    <!-- Exposed Menu Styles ( Spinner ) -->


    <style name="style_my_custom_tab_layout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/white</item>
        <item name="tabTextAppearance">@style/style_my_custom_tab_text</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <style name="style_my_custom_tab_text" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_small_heading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/spruce_light_gray</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>